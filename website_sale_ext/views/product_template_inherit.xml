<?xml version="1.0"?>
<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.equipment.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='website_id']" position="after">
                <field name="is_sold_out" widget="boolean_toggle"/>
                <field name="availability_store" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='inventory_availability']" position="attributes">
                <attribute name="attrs">{'invisible':[('is_sold_out','=',True)]}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
