<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.min_order</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="sale_checkout_settings" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="min_order_price">
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Minimum Order Price</span>
                        <div class="row mt16">
                            <label for="domestic_min_order" string="Domestic Minimum Order" class="col-lg-4 o_light_label"/>
                            <field name="domestic_min_order" class="oe_inline"/>
                        </div>
                        <div class="row mt16">
                            <label for="outside_domestic_min_order" string="Outside Domestic Minimum Order" class="col-lg-4 o_light_label"/>
                            <field name="outside_domestic_min_order" class="oe_inline"/>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
